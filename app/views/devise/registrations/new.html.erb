<% @title = t('devise.title.signup') %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<%= devise_error_messages! %>

<div class="row">
	<div class="col-sm-3"></div>
	<div class="col-sm-6 main_box">
		<div class="field form-group">
			<%= f.label :email %><br />
			<%= f.text_field :email, autofocus: true, class: 'form-control' %>
		</div>

		<div class="field form-group">
			<%= f.label :password %>
			<% if @minimum_password_length %>
			<em><%= t('helpers.min_length', min_length: @minimum_password_length) %></em>
			<% end %><br />
			<%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
		</div>

		<div class="field form-group">
			<%= f.label :password_confirmation %><br />
			<%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
		</div>

		<div class="button_box">
			<%= f.submit t('helpers.action.signup'), class: 'btn btn-primary ok_btn' %>
			<%= render 'devise/shared/links' %>
		</div>

	</div>
	<div class="col-sm-3"></div>
</div>
<% end %>

