<div class="centre error_page_box">

  <table>
    <tbody>
      <tr>
        <td rowspan="2" class="error-img"><%= image_tag 'error_warning.png', size: '64x64' %></td>
        <td><b><h5><%= @title %></h5></b></td>
      </tr>
      <tr>
        <td><p><%= @body %></p></td>
      </tr>
    </tbody>
  </table>

  <a class="btn btn-primary back_btn"><%= t('helpers.action.back') %></a>
</div>

<script>

  $('.back_btn').on('click', function() {
    parent.history.back();
  });
</script>