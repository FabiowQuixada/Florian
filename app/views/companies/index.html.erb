
<%= link_to genderize_full_tag(@model, 'helpers.action.new'), new_company_path, class: 'btn btn-primary' %>

<br/>

<%= render partial: 'shared/pagination', locals: { top: true } %>

	<table id="index_table" class="table table-striped table-hover table-bordered table-condensed tablesorter tablesorter-blue">
		<thead>
			<tr>
				<% I18n.with_options(scope: 'activerecord.attributes.company') do |i18n| %>
					<th class="admin-only id-column"></th>
					<th><%= i18n.t :name %></th>
					<th class="hidden-xs"><%= i18n.t :category %></th>
					<th class="hidden-xs"><%= i18n.t :group %></th>
					<th class="sorter-false icon-column"></th>
					<th class="admin-only sorter-false icon-column"></th>
				<% end %>
			</tr>
		</thead>

		<tbody>
			<% if @list.empty? %>
				<tr>
					<td colspan="20" bgcolor="#E0E0F4" align="center"><%= genderize_tag(@model, 'helpers.none_registered') %></td>
				</tr>
			<% else %>
				<% @list.each do |iterator| %>
					<tr id="model_<%= iterator.id %>" class="model_row">
						<td class="model_id admin-only"><%= iterator.id %></td>
						<td><%= iterator.name %></td>
						<td class="hidden-xs"><%= iterator.category %></td>
						<td class="hidden-xs"><%= iterator.group %></td>
						<td class="icon-column"><%= link_to image_tag('edit.png', title: t('helpers.action.edit')), edit_company_path(iterator) %></td>
						<td class="admin-only icon-column">
							<%= image_tag('destroy.png', title: t('helpers.action.destroy'), class: 'clickable destroy_btn') %>
						</td>
					</tr>
				<% end %>
			<% end %>
		</tbody>
	</table>

<%= render partial: 'shared/pagination', locals: { top: false } %>
<%= render partial: 'shared/index_commons', locals: { model: @model } %>