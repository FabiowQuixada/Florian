<%= form_for @email_config do |f| %>

	<%= render partial: "helpers/form_errors", locals: {model: @email_config} %>

	<div class="form-group">
		<%= f.label :test_recipient %>
		<div class="input-group">
			<span class="input-group-addon">@</span>
			<%= f.text_field :test_recipient, :class => 'form-control', :type => 'email' %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :bcc %>
		<div class="input-group">
			<span class="input-group-addon">@</span>
			<%= f.text_field :bcc, :class => 'form-control', :type => 'email' %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :signature %>
		<%= f.text_area :signature, size: "24x6", :class => 'form-control' %>
	</div>

	<%= render partial: "helpers/form_buttons", locals: {model: @email_config, f: f} -%>

<%end%>

