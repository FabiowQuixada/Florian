
<%= link_to genderize_full_tag(@model, 'helpers.action.new'), new_user_path, class: 'btn btn-primary' %>

<br/>

<%= render partial: 'shared/pagination', locals: { top: true } %>

<table id="index_table" class="table table-striped table-hover table-bordered table-condensed tablesorter tablesorter-blue">
	<thead>
		<tr>
			<% I18n.with_options(scope: 'activerecord.attributes.user') do |i18n| %>
				<th class="admin-only id-column"></th>
				<th><%= i18n.t :name %></th>
				<th class="hidden-xs user_email"><%= i18n.t :email %></th>
				<th class="hidden-xs"><%= i18n.t :role %></th>
				<th class="sorter-false icon-column"></th>
				<th class="hidden-xs sorter-false icon-column"></th>
			<% end %>
		</tr>
	</thead>

	<tbody>
		<% if @list.empty? %>
			<tr>
				<td colspan="20" bgcolor="#E0E0F4" align="center"><%= genderize_tag(@model, 'helpers.none_registered') %></td>
			</tr>
		<% else %>
			<% @list.each do |iterator| %>
				<tr id="model_<%= iterator.id %>" class="model_row">
					<td class="model_id admin-only"><%= iterator.id %></td>
					<td><%= iterator.name %></td>
					<td class="hidden-xs"><%= iterator.email %></td>
					<td class="hidden-xs"><%= iterator.role.name %></td>
					<td class="icon-column"><%= link_to image_tag('edit.png', title: t('helpers.action.edit')), edit_user_path(iterator) %></td>
					<td class="hidden-xs status icon-column">
						<% if iterator.active %>
						<%= link_to image_tag('activate.png', title: genderize_tag(iterator, 'is_active'), class: 'deactivate_btn status_btn'), deactivate_user_path(iterator), method: :post, remote: true, id: 'change_status_' + iterator.id.to_s, 'data-type' => :json, class: 'deactivate_btn' %>
						<% else %>
						<%= link_to image_tag('deactivate.png', title: genderize_tag(iterator, 'is_inactive'), class: 'activate_btn status_btn'), activate_user_path(iterator), method: :post, remote: true, id: 'change_status_' + iterator.id.to_s, 'data-type' => :json, class: 'activate_btn' %>
						<% end %>
					</td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>

<%= render partial: 'shared/pagination', locals: { top: false } %>
<%= render partial: 'shared/index_commons', locals: { model: @model } %>