<%= search_form_for @q, html: { id: 'search_form' } do |f| %>
	<% I18n.with_options(scope: "activerecord.attributes.#{@model.class.name.underscore}") do |i18n| %>
		<div class="panel-group">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">
						<a data-toggle="collapse" href="#index_filters"><%= arrow_down %><%= I18n.t 'helpers.filters' %></a>
					</h4>
				</div>
				<div id="index_filters" class="panel-collapse collapse">
					<div class="panel-body">
	
						<%= render 'shared/error_alert', id: 'filter' %>

						<div class="form-group row">
							<label class="col-sm-3 col-form-label">
								<%= f.label :name_cont, i18n.t(:name), class: 'col-form-label' %>
							</label>
				    		<div class="col-sm-3">
							  	<%= f.search_field :name_cont, class: 'form-control mb-0' %>
				    		</div>

				    		<label class="col-sm-3 col-form-label">
								<%= f.label :registration_name_cont, i18n.t(:registration_name), class: 'col-form-label' %>
							</label>
				    		<div class="col-sm-3">
							  	<%= f.search_field :registration_name_cont, class: 'form-control mb-0' %>
				    		</div>
			    		</div>

			    		<div class="form-group row">
							<label class="col-sm-3 col-form-label">
								<%= f.label :entity_type_eq, i18n.t(:entity_type), class: 'col-form-label' %>
							</label>
				    		<div class="col-sm-3">
							  	<%= f.select :entity_type_eq, Maintainer::i18n_entity_types.to_a.map { |w| [w[0], w[1]] }, { include_blank: true }, { class: 'form-control mb-0' } %>
				    		</div>

							<label class="col-sm-3 col-form-label">
								<%= f.label :group_eq, i18n.t(:group), class: 'col-form-label' %>
							</label>
				    		<div class="col-sm-3">
							  	<%= f.select :group_eq, Maintainer::i18n_groups.to_a.map { |w| [w[0], w[1]] },
			                         { include_blank: true }, { class: 'form-control mb-0' } %>
				    		</div>
			    		</div>

			    		<div class="form-group row">
							<label class="col-sm-3 col-form-label">
								<%= f.label :category_eq, i18n.t(:category), class: 'col-form-label' %>
							</label>
				    		<div class="col-sm-3">
							  	<%= f.select :category_eq, Maintainer::i18n_categories.to_a.map { |w| [w[0], w[1]] },
			                         { include_blank: true }, { class: 'form-control mb-0' } %>
				    		</div>
			    		</div>

						<div class="form-buttons">
							<%= filter_btn f %>
							<%= clean_filters_btn f %>
						</div>
					</div>
				</div>
			</div>
		</div>
	<% end %>
<% end %>