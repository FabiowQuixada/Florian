<!-- MODALS -->
<div id="confirm_modal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><%= t('helpers.attention') %></h4>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" id="confirm_btn" class="btn btn-default" data-dismiss="modal"><%= t('helpers.action.confirm') %></button>
                <button type="button" id="cancel_btn" class="btn btn-default" data-dismiss="modal"><%= t('helpers.action.cancel') %></button>
            </div>
        </div>
    </div>
</div>

<div id="app_about_modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div id="about-modal-body">
                    <%= image_tag('st_florian.png', title: t('helpers.about.st_florian'), class: 'pull-right rounded-image left-image') %>
                    <p><%= t('helpers.about.main_description') %></p>
                    <p><%= t('helpers.about.showcase_description') %></p>
                </div>
            </div>
        </div>
    </div>
</div>
