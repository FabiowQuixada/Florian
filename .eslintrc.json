{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jquery": true,
        "jasmine": true
    },
    "extends": ["eslint:recommended", "plugin:jasmine-jquery/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jasmine-jquery",
        "es6-recommended"
    ],
    "globals": {
        "google": {},
        "bill_chart_data": []
    },
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "eol-last": ["error", "always"],
        "eqeqeq": "error",
        "complexity": ["warn"],
        "no-trailing-spaces": ["error", { "skipBlankLines": false }]
    }
}
